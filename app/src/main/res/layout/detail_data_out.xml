<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/light_Background"
	android:padding="2dp"
	tools:context=".activity.detail.DetailTransactionOut" >
            <TextView
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
				android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/detail_material_keluar"
                android:textColor="@color/text_color"
                android:textSize="28sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="50dp"
				android:background="@drawable/border"
				>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="50dp"
				android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_date_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_date" />

                    <EditText
                        android:id="@+id/et_detail_date_out"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="@string/date"
                        android:inputType="date"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
						android:autofillHints="" />

            </LinearLayout>

            <LinearLayout
				android:layout_width="400dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_marginStart="10dp"
				android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/shift"
                    android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_shift_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
						android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/shift"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_nik_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
						android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/nik"
                        android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
				android:layout_width="400dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_marginStart="10dp"
				android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/mat_d"
                    android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_mat_doc"
                        android:layout_width="211dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/mat_d"
						android:layout_marginStart="10dp"
                        android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
				android:layout_width="400dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_marginStart="10dp"
				android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/id_stock"
                    android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_id_stock_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/id_stock"
						android:layout_marginStart="10dp"
                        android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
				android:layout_width="400dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_marginStart="10dp"
				android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/item"
                    android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_material_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed"
						android:layout_marginStart="10dp"
                        android:text="@string/material"
                        android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
				android:layout_width="400dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_marginStart="10dp"
				android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
					android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/qty"
                    android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_quantity_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
						android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="@string/quantity"
                        android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_detail_uom_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/uom"
					android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

			</LinearLayout>

</LinearLayout>
